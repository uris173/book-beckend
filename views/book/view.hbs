<div class="row" bis_skin_checked="1">
  <div class="col-lg-12" bis_skin_checked="1">
    <div class="card" bis_skin_checked="1">
      <div class="card-body" bis_skin_checked="1">
        <a href="/books" class="btn btn-light waves-effect mb-4"><i class="uil-arrow-left"></i><span>Назад</span></a>
        <div class="row" bis_skin_checked="1">
          <div class="col-xl-5" bis_skin_checked="1">
            <div class="product-detail" bis_skin_checked="1">
              <div class="row" bis_skin_checked="1">
                <div class="col-4" bis_skin_checked="1" style="max-height: 750px; display: flex;">
                  
                  <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical"
                  bis_skin_checked="1">
                    {{#each book.img}}
                    <a class="nav-link active" id="product-1-tab" data-bs-toggle="pill" role="tab" style="margin-right: 15px;"
                      bis_size="{&quot;x&quot;:290,&quot;y&quot;:151,&quot;w&quot;:167,&quot;h&quot;:95,&quot;abs_x&quot;:290,&quot;abs_y&quot;:151}">
                        <img src="/{{@this}}" alt=""
                        class="img-fluid mx-auto d-block tab-img rounded"
                        bis_size="{&quot;x&quot;:333,&quot;y&quot;:159,&quot;w&quot;:80,&quot;h&quot;:80,&quot;abs_x&quot;:333,&quot;abs_y&quot;:159}"
                        bis_id="bn_3xwg67vnekpsdreja5qmep">
                      </a>
                    {{/each}}
                  </div>
                </div>

                <div class="col-8" bis_skin_checked="1">
                  <div class="tab-content position-relative" id="v-pills-tabContent" bis_skin_checked="1">

                    <div class="tab-pane fade show active" id="product-1" role="tabpanel" bis_skin_checked="1">
                      <div class="product-img" bis_skin_checked="1">
                        <img src="/{{firstImage}}" alt="" class="img-fluid mx-auto d-block">
                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
          <div class="col-xl-7" bis_skin_checked="1">
            <div class="mt-5 mt-xl-3 ps-xl-4" bis_skin_checked="1">
              <h5 class="font-size-14"><a href="#" class="text-muted">Книга:</a></h5>

              <div class="d-flex align-items-center mt-4">
                <h5 class="font-size-14">Наименование книги: </h5>
                <h4 class="font-size-20" style="margin-left: 30px;">{{book.title}}</h4>
              </div>

              <div class="d-flex align-items-center mt-2" bis_skin_checked="1">
                <h5 class="font-size-14">Писатель: </h5>
                <h4 class="font-size-20" style="margin-left: 30px;">{{book.author}}</h4>
                <!-- <span class="font-size-16 me-2">book.author</span> -->
              </div>

              <div class="d-flex align-items-center mt-2" bis_skin_checked="1">
                <h5 class="font-size-14">ISBN: </h5>
                <h4 class="font-size-20 " style="margin-left: 30px;">{{book.isbn}}</h4>
                <!-- <span class="font-size-16 me-2">book.author</span> -->
              </div>

              <div class="d-flex align-items-center mt-2" bis_skin_checked="1">
                <h5 class="font-size-14">Цена: </h5>
                <h4 class="font-size-20 " style="margin-left: 30px;">{{book.price}}</h4>
                <!-- <span class="font-size-16 me-2">book.author</span> -->
              </div>

              <div class="mt-2" bis_skin_checked="1">
                <h5 class="font-size-14">Краткое содержание/Описание:</h5>
                <h5 class="mt-1 text-muted">{{book.description}}</р>
                <!-- <span class="font-size-16 me-2">book.author</span> -->
              </div>


              <div bis_skin_checked="1">
                <div class="row" bis_skin_checked="1">
                  <div class="col-md-6" bis_skin_checked="1">
                    <div class="mt-3" bis_skin_checked="1">

                      <h5 class="font-size-14">Характеристики</h5>
                      <ul class="list-unstyled product-desc-list text-muted">
                        <li class=""><i class="mdi mdi-circle-medium me-1 align-middle"></i>Категория: {{book.category.title}}</li>
                        <li class=""><i class="mdi mdi-circle-medium me-1 align-middle"></i>Субкатегория: {{book.subcategory.title}}</li>
                        <li class=""><i class="mdi mdi-circle-medium me-1 align-middle"></i>Жанр: {{book.genre.title}}</li>
                        <li class=""><i class="mdi mdi-circle-medium me-1 align-middle"></i>Язык: {{book.language}}</li>
                        <li><i class="mdi mdi-circle-medium me-1 align-middle"></i>Тип: {{book.bookType}}</li>
                        <li><i class="mdi mdi-circle-medium me-1 align-middle"></i>Дата выхода: {{book.date}}</li>
                        <li class=""><i class="mdi mdi-circle-medium me-1 align-middle"></i>Бестселлер: {{book.type}}</li>
                        <li class=""><i class="mdi mdi-circle-medium me-1 align-middle"></i>Тренде: {{book.trend}}</li>
                        <li class=""><i class="mdi mdi-circle-medium me-1 align-middle"></i>Кол-во страниц: {{book.pages}}</li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- end row -->
      </div>
    </div>
  </div>
</div>
